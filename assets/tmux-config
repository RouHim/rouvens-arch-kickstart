# Arrow key shortcuts for splitting panels and selecting the new panel
bind-key Left split-window -h -c "#{pane_current_path}" \; select-pane -L
bind-key Right split-window -h -c "#{pane_current_path}" \; select-pane -R
bind-key Up split-window -v -c "#{pane_current_path}" \; select-pane -U
bind-key Down split-window -v -c "#{pane_current_path}" \; select-pane -D

# navigation through panels with alt-arrow keys
bind-key -n M-Left select-pane -L
bind-key -n M-Right select-pane -R
bind-key -n M-Up select-pane -U
bind-key -n M-Down select-pane -D

# Shortcut to create a new tab
bind-key -n C-t new-window

# switch between tabs with page up/page down
bind-key -n PageUp previous-window
bind-key -n PageDown next-window


# Show simple status bar
set -g status-position down
set -g status-justify left
set -g status-left "#[fg=white]#W"
set -g status-right "#[fg=white]#I:#P #[fg=yellow]#H"

# color the active window
set-window-option -g window-status-current-style bg=yellow,fg=black
